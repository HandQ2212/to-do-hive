<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToDoHive.BottomAppBar.Cutout" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/gray</item>
        <item name="fabAlignmentMode">center</item>
        <item name="hideOnScroll">true</item>

        <item name="fabCradleMargin">8dp</item>
        <item name="fabCradleRoundedCornerRadius">40dp</item>
        <item name="fabCradleVerticalOffset">0dp</item>
    </style>


    <style name="NoActiveIndicator" parent="">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Shape.Fab.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>